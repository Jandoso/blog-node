<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button type="button" class="btn btn-success">Nova Postagem</button></a>
<hr>



{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small> <br>
            <a href="/admin/postagens/edit/{{_id}}"><button type="button" class="btn btn-success mt-2">Editar Postagem</button></a>
             <a href="/admin/postagens/deletar/{{_id}}"><button type="button" class="btn btn-danger mt-2">Deletar Postagem</button></a>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}